<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> </title>
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/social.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/nav.css">
</head>
<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav" id="navbarCareer">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">About</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#books">Experiences</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#hobbies">Skills</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#fashion">Projects</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#quote">Contact</a></li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item nav-page"><a class="nav-link js-scroll-trigger" href="/">Professional</a></li>
            </ul>
        </div>
    </nav>

    <section class="about-section text-center" id="about">
        <div class="header">
            <h2 class="text-white">About</h2>
        </div>
        <div class="about-image">
            <img src="<%= imgs.content1 %>" alt='image1'>
        </div>
        <div class="about-paragraph">
            <p class="text-white-50">
                <%= imgs.content2 %>
            </p>
        </div>
    </section> 

    <section class="experiences-section text-center" id="books">
        <div class="header">
            <h2 class="text-blue">Favorite Reads</h2>
        </div>
        <div class="edu__container">
            <% if (books.length > 0) { %>
                <% for (let book of books) { %>
                <div class="edu__float">
                    <div class="card__school">
                        <b><%= book.title %></b>
                        <h5><%= book.author %></h5>
                    </div>
                    <div class="card__degree">
                        <p><%= book.description %></p>
                    </div>
                </div>
                <% } %>
            <% } else { %>
                <h1>No Education Found!</h1>
            <% } %>
        </div>

    <section class="skills-section text-center" id="hobbies">
        <div class="header">
            <h2 class="text-white">Hobbies</h2>
        </div>
        <div>
            <div class="float">
                <ul class="chart">
                    <% for (var i = 0; i < hobbieNames.length; i++) { %>
                        <li>
                            <span class="text-white-50" style="height:<%= hobbiePercents[i] %>%" title="<%= hobbieNames[i] %>"></span>
                        </li> 
                    <% } %>
                    

                </ul>   
                <div class="chart__labels">
                    <li><span>I'm a wizard</span></li>
                    <li><span>Very proficient</span></li>
                    <li><span>Fairly competent</span></li>
                    <li><span>Just a rookie</span></li>
                    <li><span>Complete newb</span></li>             
                </div>
            </div>
        </div>
    </section>

    <section class="projects-section text-center" id="fashion">
        <div class="header">
            <h2 class="text-blue">Fashion</h2>
        </div>
    </section>

    <section class="quote-section" id="quote">
        <div class="quote__card">
            <p>
                <%= contacts.quote %>
            </p>
        </div>
    </section>

    <section class="contact-section">
        <div class="contact__row">
            <div class="contact__card">
                <i class="fas fa-map-marked-alt"></i>
                <h4>Location</h4>
                <hr class="hr-4">
                <div class="small text-black-50"><%= contacts.location %></div>
            </div>
            <div class="contact__card">
                <i class="fas fa-envelope text-primary mb-2"></i>
                <h4 class="text-uppercase m-0">Email</h4>
                <hr class="my-4" />
                <div class="small text-black-50"><%= contacts.email %></div>
            </div>
            <div class="contact__card">
                <i class="fas fa-mobile-alt text-primary mb-2"></i>
                <h4 class="text-uppercase m-0">Phone</h4>
                <hr class="my-4" />
                <div class="small text-black-50"><%= contacts.phone %></div>
            </div>
        </div>
    </section>




    <footer class="footer small text-center text-white-50"><div class="container">Copyright Â© Your Website 2020</div></footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/scripts.js"></script>

</body>

<script>
    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
    labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
    datasets: [{
    label: '# of Votes',
    data: [12, 19, 3, 5, 2, 3],
    backgroundColor: [
    'rgba(255, 99, 132, 0.2)',
    'rgba(54, 162, 235, 0.2)',
    'rgba(255, 206, 86, 0.2)',
    'rgba(75, 192, 192, 0.2)',
    'rgba(153, 102, 255, 0.2)',
    'rgba(255, 159, 64, 0.2)'
    ],
    borderColor: [
    'rgba(255,99,132,1)',
    'rgba(54, 162, 235, 1)',
    'rgba(255, 206, 86, 1)',
    'rgba(75, 192, 192, 1)',
    'rgba(153, 102, 255, 1)',
    'rgba(255, 159, 64, 1)'
    ],
    borderWidth: 1
    }]
    },
    options: {
    scales: {
    yAxes: [{
    ticks: {
    beginAtZero: true
    }
    }]
    }
    }
    });
</script>
</html>